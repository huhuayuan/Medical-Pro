@import '../templates/templates.wxss';
@import '../tabbar/tabbar.wxss';
page {
  background-color: #fff;
}
view{
  box-sizing: border-box;
}
.list-tmp {
  background: #fff;
}
.otc-header {
  font-size:28rpx;
  color:#101010;
  border-bottom:1px solid #d2d2d2;
  background:#fff;
  padding:12rpx 30rpx;
}
.drug-icon {
  display: flex;
  flex-direction: column;
  font-size: 24rpx;
  color: #353535;
  width: 25%;
  text-align: center;
  padding-bottom: 40rpx;
}
.drug-icon image{
  width:70rpx;
  height:70rpx;
  border:1px solid #e1e2e3;
  border-radius:50%;
  margin: 0 auto;
  padding: 10rpx;
}


swiper {
  height:calc(100vh - 38px);
}
.swipper-tab{
  border-bottom: 1px solid #e1e2e3;
}
.swiper-tab-list {
    display: inline-block;
    width: 30%;
    margin: 0 10%;
    font-size: 28rpx;
    padding: 12rpx 0;
    color: #101010;
    text-align: center;
}
.on {
    border-bottom: 3px solid #40c0e3;
}
.searchBox {
  background: #fff;
  padding: 10rpx;
  border-bottom: 1px solid #e1e2e3;
}
.searchBar {
  width: 90%;
  background: #f0f0f0;
  margin: 0 auto;
  color: #b2b2b2;
  border-radius: 6px;
  height: 52rpx;
  padding: 4rpx 16rpx;
}

.searchBar input {
    display: inline-block;
    width: 80%;
    font-size: 24rpx;
    padding-left: 8rpx;
}

.searchBar icon {
    display: inline-block;
    float: left;
    margin-top: 4px;
}
.doctorLists {
  padding: 0 30rpx;
}
.doctorList {
  padding: 30rpx 0;
  border-bottom: 1px solid #e1e2e3;
}

.context {
    color: #101010;
    font-size: 28rpx;
}
.basic {
    background-color: #fff;
    padding: 30rpx 30rpx 0;
}
.inputGroup {
    position: relative;
    margin-bottom: 10rpx;
}
.inputGroup input {
    border-bottom: 2rpx solid #d2d2d2;
    padding: 10rpx 30rpx;
}
.inputGroup image {
    width: 52rpx;
    height: 72rpx;
    position: absolute;
    right: 6rpx;
    top: 0;
}
.classInput {
    border-bottom: 2rpx solid #d2d2d2;
    padding: 10rpx 30rpx;
    height: 52rpx;
    box-sizing: content-box;
}
.sexTab {
    float: left;
    padding: 4rpx 16rpx;
    border: 2rpx dashed #d2d2d2;
    border-radius: 8rpx;
    margin-right: 16rpx;
}
.classInput .active {
    border: 2rpx solid #40c0e3;
}
.doctorInfo {
    background-color: #fff;
    padding: 0 30rpx 20rpx;
}
.medicineChange {
    display: inline-block;
    font-size: 22rpx;
    border: 4rpx dashed #d2d2d2;
    padding: 4rpx 10rpx;
    text-align: center;
    border-radius: 8rpx;
}
.mc {
    margin-top: 20rpx;
    color: #888
}
.submit-btn {
  padding: 30rpx;
  width: 100%;
  position: fixed;
  bottom: 0;
  background: #fff;
  border-top: 1px solid #e1e2e3;
  z-index: 1;
}
.submit-btn button{
  width:90%;
  margin:0 auto;
  border-radius:5px;
  height:46px;
  background: #03a9f4;
  text-align: center;
  color:#fff;
}
