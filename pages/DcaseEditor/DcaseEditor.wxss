/* pages/DcaseEditor/DcaseEditor.wxss */
Page  {
    background: #fff;
}
.editor {
    background: #fff;
    padding: 30rpx 40rpx 0;
}
.textGroup {
    border-bottom: 2rpx solid #d2d2d2;
    padding-bottom: 10rpx;
    margin-bottom: 20rpx;
    color: #888;
    font-size: 28rpx;
}
.icon {
    padding: 2rpx 14rpx;
    font-size: 24rpx;
    border: 2rpx solid #66cce8;
    margin-bottom: 30rpx;
    border-radius: 12rpx;
}
.iconC{
    color: #66cce8;
}
.iconS {
    background: #66cce8;
    color: #fff;
}
.iconP {
    color:#fff;
    background: #9fd6d6;
    border-color: #9fd6d6;
}
.content {
    margin-top: 26rpx;
}
.select {
    padding: 6rpx 14rpx;
    font-size: 24rpx;
    border: 2rpx solid #66cce8;
    margin-bottom: 20rpx;
    border-radius: 12rpx;
    margin-right: 16rpx;
    color: #66cce8;
}
.default {
    padding: 6rpx 14rpx;
    font-size: 24rpx;
    border: 2rpx dashed #888;
    margin-bottom: 20rpx;
    border-radius: 12rpx;
    margin-right: 16rpx;
}
.caseStyle {
    display: flex;
    flex-wrap: wrap;
}
.submit[type="default"]  {
    border-color: #03a9f4;
    background: #03a9f4;
    color: #fff;
    margin: 200rpx auto 0;
    width: 95%;
}
