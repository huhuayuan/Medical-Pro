/* pages/DFAQ/DFAQ.wxss */

page {
    background: #fff;
}
.FAQ {
    background: #fff;
    padding: 40rpx;
    display: flex;
    flex-flow: column;
}
.textGroup {
    display: flex;
    flex-flow: column;
    padding-bottom: 20rpx;
    border-bottom: 2rpx solid #e1e2e3;
    margin-bottom: 30rpx;
}
.textGroup:last-of-type {
    border-bottom: none;
}
.FAQ text:nth-of-type(1) {
    font-size: 32rpx;
    margin-bottom: 10rpx;
}
.FAQ text:nth-of-type(2) {
    font-size: 28rpx;
    margin-bottom: 10rpx;
    color: #888;
    text-indent: 2em;
}
.FAQ text:nth-of-type(3) {
    font-size: 28rpx;
    margin-bottom: 10rpx;
    color: #888;
}