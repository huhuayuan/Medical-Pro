/* pages/DaboutUs/DaboutUs.wxss */
.contain {
    background: #fff;
    padding: 40rpx;
}
.title {
    text-align: center;
    font-size: 34rpx;
    padding-bottom: 30rpx;
    border-bottom: 2rpx solid #e1e2e3;
    margin-bottom: 20rpx;
}
.usImg {
    width: 100%;
}
.section {
    display: flex;
    flex-flow: column;
    padding-top: 20rpx;
    padding-bottom: 20rpx;
    border-bottom: 2rpx solid #e1e2e3;
}
.section text:nth-of-type(1){
    font-size: 28rpx;
    margin-bottom: 20rpx;
}
.section text:nth-of-type(2){
    font-size: 28rpx;
    margin-bottom: 20rpx;
    color: #888;
    text-indent: 2em;
}
.section:last-of-type {
    border-bottom:none;
}
