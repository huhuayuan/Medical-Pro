.setPanel {
  font-size: 28rpx;
  color: #888888;
  background: #fff;
  padding: 30rpx 40rpx;
  height: 100%;
}
.selfMessage {
  background: #fff;
  padding: 0 30rpx;
  margin-bottom: 20rpx;
  line-height: 80rpx;
}
.setPanel .item {
  display: flex;
  align-items: center;
  height: 100rpx;
}
.item-text {
  width: 140rpx;
}
.item input {
  flex: auto;
  border-bottom: 1px solid #e1e2e3;
  padding-left: 10rpx;
}
.btn-lg {
  height: 92rpx;
  font-size: 36rpx;
}
.btn-info {
  color: #fff;
  background: #03a9f4;
}
.btn-info:focus {
  background: #09a3e6;
}
