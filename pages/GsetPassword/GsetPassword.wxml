<view class="setPanel">
    <view class="phone item">
        <text class="item-text">手机号</text>
        <input class="value-right" type="text"  value="{{userInfo.phoneNumber?userInfo.phoneNumber:''}}" placeholder="请输入联系方式" />
    </view>
    <view class="password item">
        <text class="item-text">密码</text>
        <input class="value-right" type="password" bindinput="setPassword" value="" placeholder="填写密码" />
    </view>
    <view class="againPassword item">
        <text class="item-text">确认密码</text>
        <input class="value-right" type="password" bindinput="setPasswordAgain" value="" placeholder="再次填写密码" />
    </view>
    <view class="h1"></view>
    <view id="footer" style="margin:25px 0">
      <button bindtap="changePassword" class="btn-lg btn-info">
          完成
      </button>
    </view>
</view>
